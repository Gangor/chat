{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build",
            "command": "gcc",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "-pthread",
                "-Iinclude",
                "-g",
                "src/*.c",
                "-o",
                "${workspaceRoot}/bin/${workspaceFolderBasename}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}